{
  "suggest.noselect": false,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["vim"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "scss",
    "Markdown",
    "json",
    "html",
    "typescript"
  ],
  "diagnostic.signOffset": 9999999
}
