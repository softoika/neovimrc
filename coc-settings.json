{
  "suggest.noselect": false,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "scss",
    "Markdown",
    "json",
    "html",
    "typescript"
  ]
}
